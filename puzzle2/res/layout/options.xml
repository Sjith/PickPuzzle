<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    
         <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="20dip"
        >

        <TextView
            android:id="@+id/opcolumntitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/optionsColumnTitle"
            android:textColor="#ffffff"
            android:textSize="18dip" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/opcolumntitle"
            android:text="@string/optionsColumnLabel"
            android:textSize="16dip" />
     
        <Spinner
            android:id="@+id/columnSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
   
         ></Spinner>
    </RelativeLayout>
    
          <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="20dip"
        >

        <TextView
            android:id="@+id/oprowtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/optionsRowTitle"
            android:textColor="#ffffff"
            android:textSize="18dip" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oprowtitle"
            android:text="@string/optionsRowLabel"
            android:textSize="16dip" />
     
        <Spinner
            android:id="@+id/rowSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
   
         ></Spinner>
    </RelativeLayout>
    
             <RelativeLayout
                 android:id="@+id/opScaleScreenPanel"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dip"
                 android:background="@drawable/border" >

                 <TextView
                     android:id="@+id/opScaleScreentitle"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:text="@string/optionsScaleScreenTitle"
                     android:textColor="#ffffff"
                     android:textSize="18dip" />

                 <TextView
                     android:id="@+id/textView1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@+id/opScaleScreentitle"
                     android:text="@string/optionsIsScaleScreenAbleLabel"
                     android:textSize="16dip" />

                 <ToggleButton
                     android:id="@+id/scaleScreen"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true" />
             </RelativeLayout>
          
            <LinearLayout 
               android:id="@+id/opConsolePanel"
               android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_horizontal"
              
                >
                 <Button 
                android:id="@+id/opOkbutton"
                android:text="@string/button_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
               
                android:layout_marginRight="18dip"
                
                />
             <Button 
                android:id="@+id/opCancelbutton"
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dip"
                 android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />
                
            </LinearLayout>
           
</LinearLayout>